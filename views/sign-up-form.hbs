<h1 class="text-light text-center mb-3 mt-5">Sign Up Form</h1>
{{#if user}}
    <h1 class="text-center mb-3 text-light">Welcome back, No need to sign up again {{this.user.username}}!</h1>
    <div class="d-flex justify-content-center mt-5">
      <a href="/members/message-view">Messages</a>
    </div>
  {{else}}
<form method="POST" action="" class="mb-4">
    <div class="form-group">
        <label for="firstname" class="text-light">First Name: </label>
        <input type="text" name="firstname" class="form-control bg-dark border-primary text-light">
    </div>
    <div class="form-group">
        <label for="lastname" class="text-light">Last Name: </label>
        <input type="text" name="lastname" class="form-control bg-dark border-primary text-light">
    </div>
    <div class="form-group">
        <label for="username" class="text-light">Username: </label>
        <input type="text" name="username" class="form-control bg-dark border-primary text-light">
    </div>
    <div class="form-group">
        <label for="password" class="text-light">Password: </label>
        <input type="password" name="password" class="form-control bg-dark border-primary text-light">
    </div>
    <div class="text-center mt-3">
        <input type="submit" value="Submit" class="btn btn-outline-primary">
    </div>
</form>
{{/if}}
<div class="d-flex justify-content-center mt-3">
    <a href="/">Home</a>
</div>
{{#each errors}}
   <ul>
      <li class="text-danger">{{this.msg}}</li>
   </ul>
{{/each}}